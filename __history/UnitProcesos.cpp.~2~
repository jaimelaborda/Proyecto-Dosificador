//---------------------------------------------------------------------------
#include <vcl.h>
#pragma hdrstop

#include "UnitProcesos.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

bool proceso_iniciado;
enum Estado{confirmacion, configuracion, disponibilidad, dosificar};
Estado estado;

void IniciarProceso (void)
{
	proceso_iniciado = true;
	estado = confirmacion;

}

void PararProceso (void)
{
	proceso_iniciado = false;
}

bool InfoProceso (void){return proceso_iniciado;}

void Proceso (void)
{
	if(proceso_iniciado)
	{
		switch (estado) //MAQUINA DE ESTADOS
		case confirmacion:
			if (Application->MessageBox("Prueba", MBYESNO) == IDYES)
				estado = configuracion;
			break;

        default:
			;
		}
    }
}
